{
  "apps": [
    {
      "name": "pracovni-denik",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/pracovni-denik",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "500M",
      "error_file": "./logs/pracovni-denik-error.log",
      "out_file": "./logs/pracovni-denik-out.log",
      "log_file": "./logs/pracovni-denik.log",
      "time": true,
      "merge_logs": true
    }
  ]
}
